<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-1dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_strokegray"
        android:paddingBottom="10dp">

        <com.xmzlb.util.SquareImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/white"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:singleLine="true"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_homefra"/>

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_title"
            android:layout_below="@+id/text_title"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text=" "
            android:textSize="@dimen/textsize2_homefra"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_title"
            android:layout_alignRight="@+id/text_title"
            android:layout_below="@+id/text_price">

            <TextView
                android:id="@+id/text_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text=" "
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_exchange"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/wine"
                android:text="兑换"
                android:textColor="@color/white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/btn_exchange"
                android:text=" "/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text_score"
                android:src="@drawable/score1"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>