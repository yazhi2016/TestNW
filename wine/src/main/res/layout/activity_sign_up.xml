<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.xmzlb.wine.SignUpActivity" >

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_bar" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
            android:id="@+id/edit_name"
            android:layout_marginTop="10dp"
            style="@style/style_edit_mefra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_corner_strokegray_white"
            android:hint="请填写手机号码" >
        </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_corner_gold"
        android:layout_height="wrap_content"
        android:text="下一步" />
    
    <RelativeLayout 
        android:id="@+id/rela_IHaveRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="10dp"
        >
        
        <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_check_red_gray"
        android:text="" />
        
        <TextView 
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/checkBox1"
            />
        <TextView 
            android:id="@+id/text_agreement_signupact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="掌酒通服务协议"
            android:textSize="16sp"
            android:textColor="@color/pink"
            android:layout_marginLeft="0dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textview1"
            />
        
    </RelativeLayout>
    
</LinearLayout>