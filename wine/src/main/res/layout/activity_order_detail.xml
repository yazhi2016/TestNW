<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/white"
    tools:context="com.xmzlb.wine.OrderDetailActivity" >

    <include
        android:id="@+id/bar"
        layout="@layout/toplayout" />

    <TextView
        android:id="@+id/text_uilocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="订单中心 > 订单详情 > 订单状态 " />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombar"
        android:layout_below="@+id/text_uilocation"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/henxian0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rela_address"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rela_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textview0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="订单号:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textview0"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview0"
                    android:layout_marginTop="3dp"
                    android:text="收货人:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                      android:layout_alignBaseline="@+id/textview"
                    android:layout_alignBottom="@+id/textview"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textview"
                    android:text=" "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview"
                    android:layout_marginTop="3dp"
                    android:text="手机号码:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textview2"
                    android:layout_alignBottom="@+id/textview2"
                    android:layout_toRightOf="@+id/textview2"
                    android:text=" "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview2"
                    android:layout_marginTop="3dp"
                    android:text="收货地址:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textview3"
                    android:layout_alignBottom="@+id/textview3"
                    android:layout_toRightOf="@+id/textview3"
                    android:text=" "
                    android:textColor="@color/black" />
            </RelativeLayout>

            <TextView
                android:id="@+id/henxian"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rela_address"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rela_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/henxian"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp" >

                <ImageView
                    android:id="@+id/ima"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/white" />

                <RelativeLayout
                    android:id="@+id/rela_gooddetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ima" >

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:singleLine="true"
                        android:text="  "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView2"
                        android:singleLine="true"
                        android:text="促销信息："
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="0dp"
                        android:text="组合形式："
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="20dp"
                        android:text="X1"
                        android:textColor="@color/red"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/text_title"
                        android:layout_marginBottom="0dp"
                        android:text="商品规格："
                        android:textSize="13sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="￥ "
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/text_price"
                    android:text="实付款:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_beforeConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/henxian"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/henxian3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray" />

                <RelativeLayout
                    android:id="@+id/rela_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/henxian3" >

                    <TextView
                        android:id="@+id/textvie5"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="订单状态"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_registe" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text=" "
                        android:textColor="@color/red" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/henxian4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/rela_pay"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="配送商信息"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rela_address2"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="0dp" >

                <TextView
                    android:id="@+id/textview02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="配送商:" />

                <TextView
                    android:id="@+id/text_orderId2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textview02"
                    android:text=" " />

                <TextView
                    android:id="@+id/textview29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview02"
                    android:layout_marginTop="3dp"
                    android:text="联系人:" />

                <TextView
                    android:id="@+id/text_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textview29"
                    android:text=" " />

                <TextView
                    android:id="@+id/textview22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview29"
                    android:layout_marginTop="3dp"
                    android:text="手机号:" />

                <TextView
                    android:id="@+id/text_phone22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textview22"
                    android:layout_alignBottom="@+id/textview22"
                    android:layout_toRightOf="@+id/textview22"
                    android:text=" " />

                <TextView
                    android:id="@+id/textview32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview22"
                    android:layout_marginTop="3dp"
                    android:text="地址:" />

                <TextView
                    android:id="@+id/text_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textview32"
                    android:layout_alignBottom="@+id/textview32"
                    android:layout_toRightOf="@+id/textview32"
                    android:text=" " />
            </RelativeLayout>

            <TextView
                android:id="@+id/henxian5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rela_pay"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        layout="@layout/bottomlayout" />

</RelativeLayout>