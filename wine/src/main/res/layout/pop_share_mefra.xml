<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent" >

    <TextView 
        android:id="@+id/text_poo_share_empty"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/linear_pop_share"
    android:background="@drawable/pop_myinfo_bg"
        android:text=""
        />
    
    <LinearLayout
        android:id="@+id/linear_pop_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#C50922"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/rela_share_wxfriend"
                android:layout_width="fill_parent"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:padding="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:src="@drawable/wx" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="微信好友" />
                
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_share_wxpyq"
                android:layout_width="fill_parent"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:src="@drawable/wxpyq" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈" />
                
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_share_weib0"
                android:layout_width="fill_parent"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:src="@drawable/wb" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博" />
                
            </RelativeLayout>
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/rela_share_qqfriend"
                android:layout_width="fill_parent"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:padding="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:src="@drawable/qq" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="QQ好友" />
                
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_share_qqzone"
                android:layout_width="fill_parent"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:src="@drawable/qqkj" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="QQ空间" />
                
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_share_empty"
                android:layout_width="fill_parent"
                android:padding="15dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="QQ空间" />
                
            </RelativeLayout>
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/h_line_bg"
            android:text="" />
        
        <Button
            android:id="@+id/btn_pop_share_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_normal_is_white"
            android:text="取消"
            android:textSize="@dimen/pop_myinfo_textsize" />
        
       
    </LinearLayout>

</RelativeLayout>
