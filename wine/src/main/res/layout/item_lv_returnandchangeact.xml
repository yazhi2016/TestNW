<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dip"
        android:paddingLeft="10dip"
        android:paddingTop="3dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="8dip"
            android:layout_height="20dip"
            android:background="@color/gold"
            android:text="" />

        <TextView
            android:id="@+id/text_waitpay_orderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/textView1"
            android:text="订单号：601074657468"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_state_racact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_marginRight="20dip"
            android:layout_centerVertical="true"
            android:text="待处理" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/black"
        android:text="" />

    <com.xinbo.widget.ListView4ScrollView
        android:id="@+id/waitpay_item_lv"
        android:layout_width="match_parent"
        android:divider="@drawable/dashed"
        android:padding="5dip"
        android:layout_height="match_parent" >
    </com.xinbo.widget.ListView4ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_waitpay_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingTop="10dip"
            android:text="共3件"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/text_waitpay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingRight="15dip"
            android:layout_alignParentRight="true"
            android:paddingTop="10dip"
            android:text="订单总金额：1776"
            android:textColor="@color/black" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:text="" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        >

        <Button
            android:id="@+id/btn_cancel_itemascact"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
           	android:layout_alignParentRight="true"
            android:background="@drawable/wait_pay_button_selector"
            android:text="取消订单" />

    </RelativeLayout>

</LinearLayout>