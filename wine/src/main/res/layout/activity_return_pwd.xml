<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.xmzlb.wine.ReturnPwdActivity" >

    <include
        android:id="@+id/bar"
        layout="@layout/toplayout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/h_line_bg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_phone"
            style="@style/style_changePwd_textsizeAndPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dingweiact_bar"
            android:layout_toLeftOf="@+id/btn_sendsms_mefra"
            android:background="@null"
            android:hint="手机号码"
            android:inputType="number" >
        </EditText>

        <Button
            android:id="@+id/btn_sendsms_mefra"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_corner_gold_gray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/h_line_bg" />

    <EditText
        android:id="@+id/edit_oldpwd"
        style="@style/style_changePwd_textsizeAndPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dingweiact_bar"
        android:background="@null"
        android:hint="验证码"
        android:inputType="number" >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/h_line_bg" />

    <EditText
        android:id="@+id/edit_newpwd"
        style="@style/style_changePwd_textsizeAndPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dingweiact_bar"
        android:background="@null"
        android:hint="新密码"
        android:inputType="textPassword" >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/h_line_bg" />

    <EditText
        android:id="@+id/edit_newpwd2"
        style="@style/style_changePwd_textsizeAndPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dingweiact_bar"
        android:background="@null"
        android:hint="确认新密码"
        android:inputType="textPassword" >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/h_line_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dip"
            android:src="@drawable/attention" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/imageView11"
            android:singleLine="true"
            android:text="您的新密码必须是："
            android:textColor="@color/black"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/attention"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/imageView12"
            android:singleLine="true"
            android:text="6个字或者更多的字符、大小写字母或数字。"
            android:textColor="@color/black"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_login_mefra"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/selector_corner_gold_gray"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>